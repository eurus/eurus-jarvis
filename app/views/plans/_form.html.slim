.row
  .banner
    .title 计划
.col-md-3
.col-md-6
  = simple_form_for(@plan) do |f|
    -if @plan.errors.any?
        ul
          - @plan.errors.full_messages.each do |msg|
            li = msg
    .form-groups.row
      .col-md-6
        = f.input :title, input_html: {class: 'form-control '}, label: "标题",required: false
      .col-md-6
        =f.label "类型"
        = f.select :cut, ["出差","公司"] , {}, {class: 'form-control '}
    .form-groups.row
      .col-md-6
        = f.label "开始时间"
        = f.text_field :start_at,{class: "form-control datepicker"}
      .col-md-6
        = f.label "结束时间"
        = f.text_field :end_at,{class: "form-control datepicker"}
    - if pm? or ceo? or director?
      .form-groups
        = f.label "执行者"
        = f.select :user_id, @col.collect {|p| [ "#{p.fullname}", p.id ]}, {}, {class:'form-control'}
    .form-groups
      = f.input :description, input_html: {class: 'form-control', rows: 10}, label: "内容",required: false,as: :wysihtml5
    .form-actions
      = f.submit '保存',class:"btn btn-block btn-primary"
      = link_to "返回", plans_path ,class: "btn btn-default btn-block"
